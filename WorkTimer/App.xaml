<Application
    x:Class="WorkTimer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    ShutdownMode="OnExplicitShutdown"
    StartupUri="View/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ColorsDictionary.xaml" />
                <ResourceDictionary Source="Styles/ControlStyles.xaml" />
                <ResourceDictionary Source="Styles/WindowStyle.xaml" />
                <ResourceDictionary Source="Ressources/NotifyIconResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>